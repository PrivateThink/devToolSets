<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.zeros.devtool.control.SearchCodeArea?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="htmlAnchorPane"
            fx:controller="com.zeros.devtool.controller.format.HTMLFormatController">

    <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
          AnchorPane.topAnchor="10.0">
        <HBox alignment="CENTER">
            <Label text="HTML 格式化" VBox.vgrow="ALWAYS" alignment="CENTER" style="-fx-font-size: 16"/>
        </HBox>
        <HBox>
            <HBox spacing="30" prefWidth="500.0" HBox.hgrow="ALWAYS" alignment="CENTER">
                <Button text="粘貼" fx:id="pasteHtml" textAlignment="CENTER" alignment="CENTER">
                    <HBox.margin>
                        <Insets top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
                <Button text="复制" fx:id="copyHtml" textAlignment="CENTER" alignment="CENTER">
                    <HBox.margin>
                        <Insets top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
                <Button text="清空" fx:id="cleanHtml" textAlignment="CENTER" alignment="CENTER">
                    <HBox.margin>
                        <Insets top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <HBox spacing="30" prefWidth="500.0" alignment="CENTER">
                <Button fx:id="clearFormatHtml" text="清空">
                    <HBox.margin>
                        <Insets top="10" bottom="10"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="copyFormatHtml" text="复制">
                    <HBox.margin>
                        <Insets top="10" bottom="10" right="10"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </HBox>
        <HBox spacing="10" VBox.vgrow="ALWAYS">

            <SearchCodeArea fx:id="rawHtmArea" HBox.hgrow="ALWAYS"/>

            <SearchCodeArea fx:id="formatHtmlArea" HBox.hgrow="ALWAYS"/>

        </HBox>
    </VBox>

</AnchorPane>
